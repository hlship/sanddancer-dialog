(global variable (previous room $))
(global variable (turns in current room $))
(turns in current room 0)

(on every tick in $Room)
    (if) (previous room $Room)
    (then)
        (turns in current room $Turns)
        ($Turns plus 1 into $X)
        (now) (turns in current room $X)
    (else)
        (now) (previous room $Room)
        (now) (turns in current room 0)
    (endif)
