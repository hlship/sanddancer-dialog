(trace $Action)
    (trace on)
    (stoppable) { (try $Action ) }
    (trace off)

(trace instead $Action)
    (trace on)
    (stoppable) { (instead of $Action) }
    (trace off)

%% Turn off the banner as that makes tests a bit more fragile
%% (don't want to break all tests just because we changed versions of stdlib).
(banner)
    (just)